# サーバー設定
PORT=3000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# セキュリティ設定 - 本番環境では必ず変更してください
JWT_SECRET=CHANGE_THIS_TO_STRONG_SECRET_KEY
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT=100
SESSION_TIMEOUT=3600

# データベース設定
DB_HOST=localhost
DB_PORT=5432
DB_NAME=support_docs
DB_USER=postgres
DB_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# APIキー設定 - 本番環境では環境変数またはAWS Parameter Storeで設定
OPENAI_API_KEY=sk-YOUR_OPENAI_API_KEY_HERE
ANTHROPIC_API_KEY=sk-YOUR_ANTHROPIC_API_KEY_HERE

# ファイル管理設定
MAX_FILE_SIZE=100
UPLOAD_CLEANUP_HOURS=24
AUTO_DELETE_ENABLED=true

# AWS設定（本番環境用）
AWS_REGION=ap-northeast-1
AWS_S3_BUCKET=ayumi-support-uploads
AWS_PARAMETER_STORE_PREFIX=/ayumi-support/

# SSL設定（本番環境用）
SSL_CERT_PATH=/etc/ssl/certs/
SSL_KEY_PATH=/etc/ssl/private/

# ログ設定
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=10MB
LOG_MAX_FILES=5

# セキュリティヘッダー設定
CSP_ENABLED=true
HSTS_MAX_AGE=31536000